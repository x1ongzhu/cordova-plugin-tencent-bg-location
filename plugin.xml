<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-tencent-bg-location" version="1.0.0" 
    xmlns="http://apache.org/cordova/ns/plugins/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>tencentBgLocation</name>
    <js-module name="tencentBgLocation" src="www/tencentBgLocation.js">
        <clobbers target="tencentBgLocation" />
    </js-module>
    <preference name="API_KEY" />
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="tencentBgLocation">
                <param name="android-package" value="cn.x1ongzhu.tencentBgLocation.tencentBgLocation" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml">
            <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
            <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
            <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
            <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
            <uses-permission android:name="android.permission.READ_PHONE_STATE" />
        </config-file>
        <config-file parent="/manifest/application" target="AndroidManifest.xml">
            <meta-data android:name="TencentMapSDK" android:value="$API_KEY" />
            <service android:name="cn.x1ongzhu.tencentBgLocation.LocationService" android:enabled="true" android:exported="false" />
        </config-file>
        <source-file src="src/android/lib/TencentLocationSdk_v6.2.5.3.jar" target-dir="libs" />
        <source-file src="src/android/lib/armeabi/libtencentloc.so" target-dir="jniLibs/armeabi-v7a" />
        <!-- <source-file src="src/android/lib/armeabi-v7a/libtencentloc.so" target-dir="libs/armeabi-v7a" /> -->
        <!-- <source-file src="src/android/lib/arm64-v8a/libtencentloc.so" target-dir="libs/arm64-v8a" /> -->
        <!-- <source-file src="src/android/lib/x86/libtencentloc.so" target-dir="libs/x86" /> -->
        <!-- <source-file src="src/android/lib/x86_64/libtencentloc.so" target-dir="libs/x86_64" /> -->
        <source-file src="src/android/tencentBgLocation.java" target-dir="src/cn/x1ongzhu/tencentBgLocation" />
        <source-file src="src/android/LocationService.java" target-dir="src/cn/x1ongzhu/tencentBgLocation" />
        <framework src="com.yanzhenjie:permission:1.1.2" />
        <framework src="com.squareup.retrofit2:retrofit:2.3.0" />
        <framework src="com.google.code.gson:gson:2.8.2" />
        <framework src="com.squareup.retrofit2:converter-gson:2.3.0" />
    </platform>
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="tencentBgLocation">
                <param name="ios-package" value="tencentBgLocation" />
                <param name="onload" value="true" />
            </feature>
            <preference name="API_KEY" value="$API_KEY"/>
        </config-file>
        <config-file target="*-Info.plist" parent="NSLocationWhenInUseUsageDescription">
            <string>我们需要通过您的地理位置信息来获取周边数据</string>
        </config-file>
        <config-file target="*-Info.plist" parent="NSLocationAlwaysUsageDescription">
            <string>我们需要通过您的地理位置信息来获取周边数据</string>
        </config-file>
        <source-file src="src/ios/tencentBgLocation.m" />
        <framework src="src/ios/TencentLBS.framework" custom="true"/>
        <framework src="src/ios/AFNetworking.framework" custom="true"/>
        <framework src="libz.1.2.5.tbd" />
        <framework src="libsqlite3.0.tbd" />
        <framework src="libstdc++.6.0.9.tbd" />
    </platform>
</plugin>